{
  "name": "tms-ssr",
  "description": "Travel Management System --- Vue-SSR",
  "version": "1.0.0",
  "author": "yfdai <1410439635@qq.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "start": "npm run build && npm run start-server",
    "build": "npm run build-client && npm run build-server",
    "build-client": "cross-env NODE_ENV=production webpack --config webpack.client.config.js --progress --hide-modules",
    "build-server": "cross-env NODE_ENV=production webpack --config webpack.server.config.js --progress --hide-modules",
    "start-server": "node server.js",
    "lint": "eslint src/**/*.{js,vue}",
    "eslint": "eslint --init",
    "test": "jest",
    "test1": "mocha-webpack --webpack-config webpack.base.config.js --require tests/unit/setup.js tests/unit/**/*.spec.js",
    "test-ci": "mocha-webpack --webpack-config webpack.config-test.js  --require tests/unit/setup.js tests/unit/**/*.spec.js",
    "cover": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run test-ci",
    "test2": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha-webpack --webpack-config webpack.config-test.js --require tests/unit/setup.js tests/unit/**/*.spec.js",
    "e2e": "nightwatch tests/e2e/*.js",
    "e2e:chrome": "nightwatch --env chrome tests/e2e/*.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "/tests/unit/.*.js$",
    "collectCoverage": false,
    "snapshotSerializers": [
      "jest-serializer-vue"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "docs/*"
    ],
    "delay": "2500"
  },
  "nyc": {
    "include": [
      "src/**/*.(js|vue)"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "dependencies": {
    "axios": "^1.7.7",
    "express": "^4.21.1",
    "http-proxy-middleware": "^0.21.0",
    "i": "^0.3.6",
    "jquery": "^3.7.1",
    "moment": "^2.30.1",
    "vue": "^2.6.11",
    "vue-axios": "^2.1.5",
    "vue-router": "^3.1.5",
    "vue-server-renderer": "^2.6.11",
    "vuex": "^3.1.2",
    "vuex-router-sync": "^5.0.0",
    "webpack-merge": "^4.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "echarts": "^4.6.0",
    "eslint": "^6.8.0",
    "expect": "^25.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^25.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jsdom": "^16.2.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "regenerator-runtime": "^0.13.3",
    "sinon": "^8.1.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "v-charts": "^1.19.0",
    "vue-jest": "^3.0.5",
    "vue-loader": "^15.9.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2"
  }
}
